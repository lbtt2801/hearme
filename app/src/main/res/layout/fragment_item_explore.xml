<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            tools:context=".view.fragments.ItemExploreFragment">

            <TextView
                android:id="@+id/tvWeeklyAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Album"
                android:textColor="@color/greyscale_900"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTopAlbumGlobal"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWeeklyAlbum">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_01"/>

                <TextView
                    android:id="@+id/tvInCardTopAlbumGlobal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOP ALBUMS GLOBAL"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTopAlbumGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Top Albums Global"
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTopAlbumGlobal"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTopAlbum"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toEndOf="@+id/cardViewTopAlbumGlobal"
                app:layout_constraintTop_toBottomOf="@+id/tvWeeklyAlbum">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_02"/>

                <TextView
                    android:id="@+id/tvInCardTopAlbum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOP ALBUMS UNITED STATES"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTopAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Top Albums United.."
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTopAlbum"/>

            <TextView
                android:id="@+id/tvWeeklySong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Weekly Song"
                android:textColor="@color/greyscale_900"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tvTopAlbumGlobal"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTopSongGlobal"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWeeklySong">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_03"/>

                <TextView
                    android:id="@+id/tvInCardTopSongGlobal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOP SONGS GLOBAL"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTopSongGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Top Songs Global"
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTopSongGlobal"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTopSong"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toEndOf="@+id/cardViewTopSongGlobal"
                app:layout_constraintTop_toBottomOf="@+id/tvWeeklySong">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_04"/>

                <TextView
                    android:id="@+id/tvInCardTopSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOP SONGS UNITED STATES"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTopSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Top Songs United.."
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTopSong"/>

            <TextView
                android:id="@+id/tvDailyViral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Daily Viral"
                android:textColor="@color/greyscale_900"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tvTopSongGlobal"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTop50Global"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDailyViral">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_05"/>

                <TextView
                    android:id="@+id/tvInCardTop50Global"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="VIRAL 50 GLOBAL"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTop50Global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Viral 50 Global"
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTop50Global"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewTop50"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toEndOf="@+id/cardViewTop50Global"
                app:layout_constraintTop_toBottomOf="@+id/tvDailyViral">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_bg_06"/>

                <TextView
                    android:id="@+id/tvInCardTop50"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/on_button"
                    android:textSize="24sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="VIRAL 50 UNITED STATES"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTop50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Viral 50 United States"
                android:textSize="20sp"
                android:textColor="@color/greyscale_900"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewTop50"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
