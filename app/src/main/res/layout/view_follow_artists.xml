<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="artist"
            type="com.lbtt2801.hearme.model.Artist" />

        <variable
            name="activity"
            type="com.lbtt2801.hearme.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:setImage="@{artist.image}"
            android:src="@drawable/img_artist"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:letterSpacing="0.04"
                android:text="@{artist.artistName}"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/verified" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_button_follow"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/selector_toggle_button_follow"
            android:letterSpacing="0.07"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAllCaps="false"
            android:textOff="Follow"
            android:textOn="Following"
            android:textSize="14dp" />
        <!--        app:onFollowCheckedChanged="@{artist}"-->

    </LinearLayout>
</layout>