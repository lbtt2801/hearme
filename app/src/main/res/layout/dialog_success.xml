<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="32dp"
            android:paddingHorizontal="32dp">

            <ImageView
                android:id="@+id/image_circle_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="135dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintBottom_toTopOf="@id/image_main_circle"
                app:layout_constraintRight_toRightOf="@id/image_main_circle" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="74dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintBottom_toTopOf="@id/image_main_circle"
                app:layout_constraintLeft_toRightOf="@id/image_circle_1" />

            <ImageView
                android:id="@+id/image_circle_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintLeft_toRightOf="@id/image_main_circle"
                app:layout_constraintTop_toTopOf="@id/image_main_circle" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="73dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintLeft_toRightOf="@id/image_main_circle"
                app:layout_constraintRight_toLeftOf="@id/image_circle_2"
                app:layout_constraintTop_toBottomOf="@id/image_circle_2" />

            <ImageView
                android:id="@+id/image_circle_3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="123dp"
                android:layout_marginEnd="2.93dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintRight_toLeftOf="@id/image_circle_2"
                app:layout_constraintTop_toBottomOf="@id/image_circle_2" />

            <ImageView
                android:id="@+id/image_circle_4"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintRight_toLeftOf="@id/image_circle_3"
                app:layout_constraintTop_toBottomOf="@id/image_main_circle" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="55dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintRight_toLeftOf="@id/image_circle_4"
                app:layout_constraintTop_toBottomOf="@id/image_main_circle" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="108dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintRight_toLeftOf="@id/image_main_circle"
                app:layout_constraintTop_toBottomOf="@id/image_circle_1" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_weak_circle"
                app:layout_constraintRight_toLeftOf="@id/image_circle_1"
                app:layout_constraintTop_toBottomOf="@id/image_circle_1" />

            <ImageView
                android:id="@+id/image_main_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/bg_ic_authorization"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_authorization"
                app:layout_constraintBottom_toBottomOf="@id/image_main_circle"
                app:layout_constraintLeft_toLeftOf="@id/image_main_circle"
                app:layout_constraintRight_toRightOf="@id/image_main_circle"
                app:layout_constraintTop_toTopOf="@id/image_main_circle" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.04"
                android:text="Congratulations!"
                android:textColor="@color/color_bg_button_continue"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_main_circle"/>

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:letterSpacing="0.005"
                android:text="You have successfully subscribed 1 month premium. Enjoy the benefits!"
                android:textColor="@color/greyscale_900"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/bg_button"
                android:text="OK"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="18dp"
                android:paddingTop="30dp"
                app:cornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetail"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>