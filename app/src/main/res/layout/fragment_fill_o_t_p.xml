<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragments.forgotandresetpassword.FillOTPFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/text_send_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:gravity="center"
                    android:lineHeight="25dp"
                    android:text="Code has been send to"
                    android:textColor="@color/greyscale_900"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_num_1"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text_profile"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="32dp"
                        android:paddingTop="16dp"
                        android:paddingRight="32dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/greyscale_900"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_num_2"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text_profile"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="32dp"
                        android:paddingTop="16dp"
                        android:paddingRight="32dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/greyscale_900"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_num_3"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text_profile"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="32dp"
                        android:paddingTop="16dp"
                        android:paddingRight="32dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/greyscale_900"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_num_4"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text_profile"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:paddingLeft="32dp"
                        android:paddingTop="16dp"
                        android:paddingRight="32dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/greyscale_900"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Resend code in 55 s"
                    android:textColor="@color/greyscale_900"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_verify"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_continue_2"
            android:paddingLeft="16dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp"
            android:paddingBottom="18dp"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/color_txt_button_continue"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/container_num_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_number_keyboard"
            android:elevation="0dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_number_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="1"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="2"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="3"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_number_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="4"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="5"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="6"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_number_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="7"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="8"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="9"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_number_star"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="*"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_number_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="0"
                    android:textColor="@color/greyscale_900"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/btn_number_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_clear"
                    app:tint="@color/greyscale_900" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>